---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: "HEM: Hierarchical Experience Memory for Self-Evolving LLM Agents",
    repo: "https://github.com/XiangJinyu/hem-agent",
    pdf: "https://github.com/XiangJinyu/hem-agent/blob/main/paper/HEM_Hierarchical_Experience_Memory.pdf",
    thumbnail: "/images/open-research/hem-agent.png",
    description: "Introduces a hierarchical experience memory architecture that enables LLM agents to accumulate, organize, and retrieve experiential knowledge for continuous self-improvement across tasks.",
    tags: ["LLM Agent", "Self-Evolution", "Memory"],
  },
  {
    title: "Tidal-Induced Stellar Warp: Ring Model Simulation Study",
    repo: "https://github.com/XiangJinyu/stellar-warp-sim",
    pdf: "https://github.com/XiangJinyu/stellar-warp-sim/blob/main/paper/tidal_stellar_warp_paper.pdf",
    thumbnail: "/images/open-research/stellar-warp-sim.png",
    description: "Simulates tidal-induced stellar warps using a ring model framework, investigating the mechanisms by which satellite galaxies excite and sustain disk warping in host galaxies.",
    tags: ["Astrophysics", "Simulation", "Stellar Dynamics"],
  },
  {
    title: "Agent RL for Diffusion LLMs",
    repo: "https://github.com/XiangJinyu/dAgent-RL",
    pdf: "https://github.com/XiangJinyu/dAgent-RL/blob/main/paper/Agent_RL_for_Diffusion_LLMs.pdf",
    thumbnail: "/images/open-research/dAgent-RL.png",
    description: "Explores reinforcement learning post-training for diffusion-based large language models in agentic settings, powering the state-of-the-art TraDo series.",
    tags: ["Diffusion LLM", "Reinforcement Learning", "Agent"],
  },
  {
    title: "Finitude and the Weight of Choice",
    repo: "https://github.com/XiangJinyu/finitude-and-the-weight-of-choice",
    pdf: "https://github.com/XiangJinyu/finitude-and-the-weight-of-choice/blob/main/Finitude_and_the_Weight_of_Choice.pdf",
    thumbnail: "/images/open-research/finitude.png",
    description: "A philosophy paper arguing that human uniqueness in the AI era is grounded in finitude rather than simulable cognitive properties. Introduces the concept of 'weight of choice' as a distinguishing feature of embodied, mortal agents.",
    tags: ["Philosophy", "AI & Humanity", "Ethics"],
  },
  {
    title: "Automated Census of Optical Disk Warps in Edge-on Galaxies from DESI Legacy Surveys",
    repo: "https://github.com/XiangJinyu/galaxy-warp-census",
    pdf: "https://github.com/XiangJinyu/galaxy-warp-census/blob/main/paper/Galaxy_Warp_Census_DESI_LS.pdf",
    thumbnail: "/images/open-research/galaxy-warp-census.png",
    description: "Conducts an automated census of optical disk warps in 742 edge-on galaxies from DESI Legacy Surveys DR10, finding a 3.8% warp frequency with complete MNRAS-format analysis.",
    tags: ["Astrophysics", "Galaxy Morphology", "DESI"],
  },
  {
    title: "Tidal-Induced Disk Warps in TNG50: A Statistical Study",
    repo: "https://github.com/XiangJinyu/tng50-tidal-warp",
    pdf: "https://github.com/XiangJinyu/tng50-tidal-warp/blob/main/paper/tng50_tidal_warp_paper.pdf",
    thumbnail: "/images/open-research/tng50-tidal-warp.png",
    description: "A statistical study of tidal-induced disk warps in the TNG50 cosmological simulation, analyzing the incidence, amplitude, and environmental correlations of warped galactic disks.",
    tags: ["Astrophysics", "TNG50", "Cosmological Simulation"],
  },
  {
    title: "Resolving the JWST High-z Galaxy Excess with a Semi-Analytic Model",
    repo: "https://github.com/XiangJinyu/jwst-sam",
    pdf: "https://github.com/XiangJinyu/jwst-sam/blob/main/jwst-sam.pdf",
    thumbnail: "/images/open-research/jwst-sam.png",
    description: "Addresses the tension between JWST observations and theoretical predictions of high-redshift galaxy abundances by introducing a redshift-dependent star formation efficiency in a semi-analytic model, reducing chi-squared from 79.1 to 0.41 at z>=10.",
    tags: ["Astrophysics", "JWST", "Galaxy Formation"],
  },
];
---

<Layout title="Open Research | Jinyu Xiang" description="Research projects generated with Open Research — an AI-powered research assistant.">
  <section class="or-banner">
    <div class="or-banner-inner">
      <pre class="or-ascii" aria-label="Open Research logo">
